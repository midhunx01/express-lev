{
  "name": "express-lev",
  "version": "1.0.5",
  "description": "Logger, Error handling, and Validation utilities for Express TypeScript apps",
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/esm/index.d.ts",
  "keywords": [
    "express",
    "typescript",
    "logger",
    "pino",
    "validation",
    "dto",
    "error-handling",
    "typebox"
  ],
  "author": "midhunx01",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/midhunx01/express-lev.git"
  },
  "bugs": {
    "url": "https://github.com/midhunx01/express-lev/issues"
  },
  "homepage": "https://github.com/midhunx01/express-lev#readme",
  "files": [
    "/build/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "types": "./build/esm/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "del-cli ./build/*",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "release": "npm version patch && npm run build && npm publish"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "del-cli": "^7.0.0",
    "typescript": "^5.9.3"
  }
}
