{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "allowImportingTsExtensions": false,
    "lib": ["ESNext"],
    "types": ["node"]
  },
  "include": ["src"]
}
